{
  "name": "goinvov",
  "description": "Static site for goinvo.com using Next.js",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/goinvo/goinvo.com"
  },
  "scripts": {
    "develop": "next dev",
    "develop:scss": "sass --watch --update --style=expanded src/styles:public/styles",
    "build:server": "next build",
    "build:scss": "npm run build:rework && sass src/styles:public/styles",
    "build:rework": "node scripts/rework-pure-grids.js",
    "build": "npm run build && npm run build:scss && npm run start",
    "start": "next start",
    "lint": "next lint",
    "upload": "node scripts/upload.js",
    "redirect": "node scripts/redirect.js",
    "release": "commit-and-tag-version"
  },
  "dependencies": {
    "next": "14.0.4",
    "react": "^18",
    "react-dom": "^18",
    "react-helmet": "^6.1.0",
    "rework": "^1.0.1",
    "rework-pure-grids": "^2.0.1",
    "sass": "^1.69.6"
  },
  "devDependencies": {
    "commit-and-tag-version": "^12.0.0",
    "eslint": "^8",
    "eslint-config-next": "14.0.4",
    "husky": "^8.0.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}